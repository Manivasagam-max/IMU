<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Add your additional options here -->
    <TextView
        android:id="@+id/option7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abduction/Adduction"
        android:padding="10dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/option8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flextion/Extension"
        android:padding="10dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/option9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="External Rotation"
        android:padding="10dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/option10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Internal Rotation"
        android:padding="10dp"
